# Actual write updates config and state files.

exec aerospace-utils workspace use --no-reload --config-path config.toml --state-path state.toml --monitor-width 1920 --no-color 60

# Verify config updated
grep '[gaps.outer.left.monitor]' config.toml
grep '[gaps.outer.right.monitor]' config.toml
grep 'main = 384' config.toml

# Verify state updated
grep 'current = 60' state.toml
grep 'default = 50' state.toml

-- config.toml --
start-at-login = true

[gaps]
[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
top = 10
bottom = 10
left = [
    { monitor.main = 100 },
]
right = [
    { monitor.main = 100 },
]

-- state.toml --
[monitors.main]
current = 50
default = 50

[monitors.'Built-in Retina Display']
current = 75
default = 60
