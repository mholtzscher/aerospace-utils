# Test shift with no argument resets shift to 0 (centered).

exec aerospace-utils workspace shift --dry-run --config-path config.toml --state-path state.toml --monitor-width 1920 --no-color
stdout 'left: 480px \(25%\)'
stdout 'right: 480px \(25%\)'
stdout '50%'

-- config.toml --
start-at-login = true

[gaps]
[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
top = 10
bottom = 10
left = [
    { monitor.main = 100 },
]
right = [
    { monitor.main = 100 },
]

-- state.toml --
[monitors.main]
current = 50
shift = -5
default = 50
