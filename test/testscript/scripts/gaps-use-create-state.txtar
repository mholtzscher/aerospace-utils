# Missing state file is created.

exec aerospace-utils workspace use --config-path config.toml --state-path state.toml --monitor-width 1920 --no-color 55
stdout 'Set main to 55%'
grep 'current = 55' state.toml
grep 'default = 55' state.toml

-- config.toml --
start-at-login = true

[gaps]
[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
top = 10
bottom = 10
left = [
    { monitor.main = 100 },
]
right = [
    { monitor.main = 100 },
]
