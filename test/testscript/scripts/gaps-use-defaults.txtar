# Default config/state paths via HOME.

mkdir -p $WORK/.config/aerospace

env HOME=$WORK
exec aerospace-utils gaps use --dry-run --monitor-width 1920 --no-color
stdout '50%'
stdout 'dry'

-- .config/aerospace/aerospace.toml --
start-at-login = true

[gaps]
[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
top = 10
bottom = 10
left = [
    { monitor.main = 100 },
]
right = [
    { monitor.main = 100 },
]

-- .config/aerospace/aerospace-utils-state.toml --
[monitors.main]
current = 50
default = 50

[monitors.'Built-in Retina Display']
current = 75
default = 60
