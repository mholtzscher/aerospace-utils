# With specific monitor name.

exec aerospace-utils gaps adjust --dry-run --monitor 'Built-in Retina Display' --config-path config.toml --state-path state.toml --monitor-width 2560 --no-color --by=10
stdout 'Built-in Retina Display'
stdout '85%'
stdout '192px'

-- config.toml --
start-at-login = true

[gaps]
[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
top = 10
bottom = 10
left = [
    { monitor.main = 100 },
    { monitor.'Built-in Retina Display' = 200 },
    { monitor."LG UltraFine" = 150 },
]
right = [
    { monitor.main = 100 },
    { monitor.'Built-in Retina Display' = 200 },
    { monitor."LG UltraFine" = 150 },
]

-- state.toml --
[monitors.main]
current = 50
default = 50

[monitors.'Built-in Retina Display']
current = 75
default = 60
