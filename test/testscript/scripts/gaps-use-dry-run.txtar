# Dry run does not modify files.

exec aerospace-utils workspace use --dry-run --config-path config.toml --state-path state.toml --monitor-width 1920 --no-color 50
stdout 'dry'
stdout '50%'
stdout '480px'

cmp config.toml config-expected.toml

-- config.toml --
start-at-login = true

[gaps]
[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
top = 10
bottom = 10
left = [
    { monitor.main = 100 },
]
right = [
    { monitor.main = 100 },
]

-- config-expected.toml --
