# Test shift works with different monitors.

# First set a current percentage for the Dell monitor
exec aerospace-utils workspace use --monitor Dell --config-path config.toml --state-path state.toml --monitor-width 2560 --no-reload --no-color 60

# Now shift it right by 5%
exec aerospace-utils workspace shift -b 5 --monitor Dell --config-path config.toml --state-path state.toml --monitor-width 2560 --no-reload --no-color

# Verify state shows shift for Dell monitor
grep 'shift = 5' state.toml

-- config.toml --
start-at-login = true

[gaps]
[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
top = 10
bottom = 10
left = [
    { monitor.main = 100 },
    { monitor.Dell = 100 },
]
right = [
    { monitor.main = 100 },
    { monitor.Dell = 100 },
]

-- state.toml --
[monitors.main]
current = 50
default = 50

[monitors.Dell]
current = 60
default = 60
