# Default state path via HOME.

mkdir -p $WORK/.config/aerospace

env HOME=$WORK
exec aerospace-utils workspace adjust --dry-run --monitor-width 1920 --no-color
stdout '55%'
stdout '432px'

-- .config/aerospace/aerospace-utils-state.toml --
[monitors.main]
current = 50
default = 50

[monitors.'Built-in Retina Display']
current = 75
default = 60
