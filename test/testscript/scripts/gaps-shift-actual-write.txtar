# Test actual write of shift updates config with asymmetric gaps and state.

exec aerospace-utils workspace shift -b 5 --config-path config.toml --state-path state.toml --monitor-width 1920 --no-reload --no-color

# Verify state updated with shift
grep 'shift = 5' state.toml

# Verify config updated with asymmetric gaps
# For 1920px at 50% with 5% shift: left = 30% = 576px, right = 20% = 384px
grep 'monitor.main = 576' config.toml  # left
grep 'monitor.main = 384' config.toml  # right

-- config.toml --
start-at-login = true

[gaps]
[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
top = 10
bottom = 10
left = [
    { monitor.main = 100 },
]
right = [
    { monitor.main = 100 },
]

-- state.toml --
[monitors.main]
current = 50
default = 50
