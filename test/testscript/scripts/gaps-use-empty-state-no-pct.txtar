# Empty state file without percentage uses default.

exec aerospace-utils workspace use --config-path config.toml --state-path state.toml --monitor-width 1920 --no-color
stdout 'Set main to 60%'
grep 'current = 60' state.toml
grep 'default = 60' state.toml

-- config.toml --
start-at-login = true

[gaps]
[gaps.inner]
horizontal = 10
vertical = 10

[gaps.outer]
top = 10
bottom = 10
left = [
    { monitor.main = 100 },
]
right = [
    { monitor.main = 100 },
]

-- state.toml --
